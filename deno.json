{
  "tasks": {
    "run": "deno run -WR src/main.ts",
    "test": "deno test --unstable-raw-imports --parallel",
    "typecheck": "deno check . --unstable-raw-imports",
    "build": "deno -W=bin --unstable-bundle scripts/build-package.ts"
  },
  "fmt": {
    "proseWrap": "preserve"
  },
  "nodeModulesDir": "none",
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.14",
    "@std/yaml": "jsr:@std/yaml@1.0.9",
    "@std/jsonc": "jsr:@std/jsonc@1.0.2",
    "@valibot/valibot": "jsr:@valibot/valibot@1.1.0"
  },
  "exclude": [
    "testdata/*"
  ]
}
